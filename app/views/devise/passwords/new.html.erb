<h2>¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
    <%= f.label :email, class: "col-xs-2 control-label" %>
    <div class="col-xs-2">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <div class="col-xs-2 col-sm-offset-2">
        <%= f.submit "Reset password", class: "btn btn-primary" %>
    </div>
</div>
<div class="form-group">
    <div class="col-xs-2 col-sm-offset-2">
        <%= render "devise/shared/links" %>
    </div>
</div>
<% end %>