<%= stylesheet_link_tag "registration.css" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'container'}) do |f| %>
<%= devise_error_messages! %>
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                 <h3 class="panel-title">Registrarte en MiLEEM</h3>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form">
                    <fieldset>
                        <div class="form-group">
                            <%= f.label :full_name %>
                            <%= f.text_field :full_name, class: "form-control",autofocus: true %>
                        </div>
                        <div class="form-group">
                            <%= f.label :phone %>
                            <%= f.text_field :phone, class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :email %>
                            <%= f.email_field :email, class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password %>
                             <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password_confirmation %>
                            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Registrarse", class: 'btn btn-lg btn-success btn-block' %>
                        </div>
                        <div class="form-group">
                            <%= render "devise/shared/links" %>
                        </div>
                     </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% end %>
