<h2>Sign up to Mileem</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
    <%= f.label :full_name, class: "col-xs-2 control-label" %>
    <div class="col-xs-2">
        <%= f.text_field :full_name, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :email, class: "col-xs-2 control-label" %>
    <div class="col-xs-2">
        <%= f.email_field :email, class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :account_type, class: "col-xs-2 control-label" %>
	<div class="col-xs-2">
  		<%= f.select(:account_type, options_for_select(User::ACCOUNT_TYPES), {}, {class: "form-control"}) %>
	</div>
</div>

<div class="form-group">
    <%= f.label :password, class: "col-xs-2 control-label" %>
    <div class="col-xs-2">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password_confirmation, class: "col-xs-2 control-label" %>
    <div class="col-xs-2">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= render "devise/shared/links" %>
    </div>
</div>

<% end %>

