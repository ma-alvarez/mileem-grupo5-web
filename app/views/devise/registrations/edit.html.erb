<%= stylesheet_link_tag "registration.css" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'container'}) do |f| %>
<%= devise_error_messages! %>
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <%= image_tag 'Mileem1.jpg', size: "120", class: "img-responsive center-block"%>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form">
                    <fieldset>
                    	<div class="form-group">
                            <%= f.label :full_name %>
                            <%= f.text_field :full_name, class: "form-control", disabled: true %>
                        </div>
  						<div class="form-group">
                            <%= f.label :phone %>
                            <%= f.text_field :phone, class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :email %>
                            <%= f.email_field :email, class: "form-control", disabled: true %>
                        </div>
                    	<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    					<div>
    						Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    					</div>
  						<% end %>                    
                        <div class="form-group">
                            <%= f.label :password, 'Contraseña nueva' %>
                             <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password_confirmation, 'Confirmar contraseña nueva' %>
                            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :current_password, 'Contraseña actual' %> <i>(para confirmar los cambios)</i>
                            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Actualizar", class: 'btn btn-lg btn-primary btn-block' %>
                        </div>
                        <div class="form-group">
                            <p>¿No estás satisfecho con nuestra plataforma? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), :confirm => "Tus publicaciones dejarán de estar activas ¿Estás seguro?", :method => :delete %>.</p>
                        </div>
                        <div class="form-group">
                            <%= link_to "Regresar", :back %>
                        </div>
					</fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% end %>


  