<%= stylesheet_link_tag "registration.css" %>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { class: 'container'}) do |f| %>
<%= devise_error_messages! %>
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
            	<%= image_tag 'Mileem1.jpg', size: "120", class: "img-responsive center-block"%>
                <!--div class="panel-heading">
                 <h3 class="panel-title">¿No recibiste el mail de confirmación?</h3>
                </div-->
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form">
                    <fieldset>
                        <div class="form-group">
                            <%= f.label :email %>
                            <%= f.email_field :email, autofocus: true, class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Reenviar mail de confirmación", class: 'btn btn-lg btn-primary btn-block' %>
                        </div>
                        <div class="form-group">
                            <%= render "devise/shared/links" %>
                        </div>
                     </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% end %>
