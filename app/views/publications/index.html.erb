<%- model_class = Publication -%>
<div class="page-header">
<h1>Publicaciones</h1>
</div>
<table class="table table-striped">
<thead>
<tr>
<th><%= model_class.human_attribute_name(:transaction_type) %></th>
<th><%= model_class.human_attribute_name(:property_type) %></th>
<th><%= model_class.human_attribute_name(:address) %></th>
<th><%= model_class.human_attribute_name(:area) %></th>
<th><%= model_class.human_attribute_name(:number_of_rooms) %></th>
<th><%= model_class.human_attribute_name(:price) %></th>
<th><%= model_class.human_attribute_name(:expenses) %></th>
<th><%= model_class.human_attribute_name(:age) %></th>
<th><%= model_class.human_attribute_name(:phone) %></th>
<th><%= model_class.human_attribute_name(:created_at) %></th>
<th><%=t '.actions', :default => t("helpers.actions") %></th>
</tr>
</thead>
<tbody>
<% @publications.each do |publication| %>
<tr>
<td><%= link_to publication.transaction_type, publication_path(publication) %></td>
<td><%= publication.property_type %></td>
<td><%= publication.address %></td>
<td><%= publication.area %></td>
<td><%= publication.number_of_rooms %></td>
<td><%= publication.price %></td>
<td><%= publication.expenses %></td>
<td><%= publication.age %></td>
<td><%= publication.phone %></td>
<td><%= publication.created_at.strftime("%d %b. %Y") %></td>
<td>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
edit_publication_path(publication), :class => 'btn btn-default btn-xs' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
publication_path(publication),
:method => :delete,
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
:class => 'btn btn-xs btn-danger' %>
</td>
</tr>
<% end %>
</tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
new_publication_path,
:class => 'btn btn-primary' %>